    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="edit_none">
        <item name="android:background">@color/none</item>
        <item name="android:textColorHint">@color/com_text_light</item>
        <item name="android:textColor">@color/sb_text_blank</item>
        <item name="android:textSize">@dimen/text_nomal</item>
    </style>

    <style name="HomeTab">
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_home_tab</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">0dp</item>
